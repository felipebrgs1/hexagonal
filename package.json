{
    "name": "hexag",
    "module": "index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "bun run --watch src/main.ts",
        "build": "bun run prisma generate --schema=src/infrastructure/db/prisma/schema.prisma",
        "start": "bun run src/main.ts",
        "migrate": "bun run prisma migrate dev --name init --schema=src/infrastructure/db/prisma/schema.prisma",
        "generate": "bun run prisma generate --schema=src/infrastructure/db/prisma/schema.prisma",
        "studio": "bun run prisma studio --schema=src/infrastructure/db/prisma/schema.prisma",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:integration": "jest --testPathPattern=integration",
        "test:unit": "jest --testPathPattern=unit"
    },
    "devDependencies": {
        "@eslint/js": "^9.30.1",
        "@types/express": "^5.0",
        "@types/jest": "^29.5.5",
        "@types/node": "^20.8.0",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^9.0.7",
        "@types/amqplib": "^0.10.1",
        "dotenv": "^16.3.1",
        "eslint": "^9.30.1",
        "globals": "^16.3.0",
        "jest": "^29.7.0",
        "prisma": "^6.10",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "typescript": "^5.8",
        "typescript-eslint": "^8.35.1"
    },
    "dependencies": {
        "@prisma/client": "^6.10",
        "amqplib": "^0.10.3",
        "express": "^5.0",
        "uuid": "^9.0.1",
        "winston": "^3.11.0"
    }
}
